{
  "name": "hello-books",
  "version": "1.0.0",
  "description": "A simple application that helps manage a library and its processes like stocking, tracking and renting books.",
  "scripts": {
    "babel": "babel server/src/ --watch --out-dir server/dist/",
    "watch": "nodemon ./server/dist/server.js",
    "start": "NODE_ENV=production node ./server/dist/server.js",
    "build": "babel server/src/ --out-dir server/dist/",
    "heroku-postbuild": "npm run build",
    "test:dev": "SET NODE_ENV=test&& mocha server/dist/tests/index.js --timeout 100000",
    "test": "NODE_ENV=test mocha server/dist/tests/index.js --timeout 100000",
    "test:db": "sequelize db:migrate --env test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adesege/HelloBooks.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/adesege/HelloBooks/issues"
  },
  "homepage": "https://github.com/adesege/HelloBooks#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "chai-http": "^3.0.0",
    "coveralls": "^2.13.1",
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.11.0",
    "tape": "^4.8.0"
  },
  "dependencies": {
    "babel-core": "^6.25.0",
    "bcrypt": "^1.0.2",
    "body-parser": "^1.17.2",
    "chai": "^4.1.1",
    "dotenv": "^4.0.0",
    "ejs": "^2.5.7",
    "express": "^4.15.3",
    "faker": "^4.1.0",
    "jsonwebtoken": "^7.4.1",
    "mocha": "^3.5.0",
    "morgan": "^1.8.2",
    "pg": "^7.1.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.4.2",
    "sequelize-cli": "^2.8.0",
    "supertest": "^3.0.0",
    "webpack": "^3.5.2"
  }
}
